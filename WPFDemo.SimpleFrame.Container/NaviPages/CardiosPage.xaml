<Page x:Class="WPFDemo.SimpleFrame.Container.NaviPages.CardiosPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:beatItemList="clr-namespace:WPFDemo.SimpleFrame.Views.ECGTools;assembly=WPFDemo.SimpleFrame.Views.ECGTools"
      xmlns:beatTemplateGroup="clr-namespace:WPFDemo.SimpleFrame.Views.ECGTools.BeatTemplateGroup;assembly=WPFDemo.SimpleFrame.Views.ECGTools"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WPFDemo.SimpleFrame.Container.NaviPages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Title="CardiosPage"
      d:DesignHeight="450"
      d:DesignWidth="800"
      mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <beatTemplateGroup:BeatTemplateGroupView x:Name="PART_BeatTemplateGroupView" Width="458" />
        </ScrollViewer>
        <Button Grid.Column="1"
                Height="30"
                Click="Button_Click"
                Content="改变模板" />
        <beatItemList:BeatItemListViewContainer Grid.Column="2" />
    </Grid>
</Page>
