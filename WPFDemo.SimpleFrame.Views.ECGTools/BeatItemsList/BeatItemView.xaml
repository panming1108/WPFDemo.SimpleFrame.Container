<UserControl x:Class="WPFDemo.SimpleFrame.Views.ECGTools.BeatItemsList.BeatItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPFDemo.SimpleFrame.Views.ECGTools.BeatItemsList"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="125"
             d:DesignWidth="125"
             mc:Ignorable="d">
    <Grid Margin="2">
        <Border x:Name="PART_Border"
                Background="White"
                BorderBrush="#DBE0E3"
                BorderThickness="2"
                CornerRadius="2" />
        <local:SelectMaskPaint ClipToBounds="True" x:Name="PART_Canvas" />
        <Border Width="24"
                Height="24"
                Margin="5"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="#EBFAFF">
            <TextBlock x:Name="PART_BeatType"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Foreground="#00AAFF" />
        </Border>
        <TextBlock x:Name="PART_Order"
                   Margin="0,5,0,0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top" />
    </Grid>
</UserControl>
