<UserControl x:Class="WPFDemo.SimpleFrame.Views.ECGTools.BeatItemsList.BeatItemsListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPFDemo.SimpleFrame.Views.ECGTools.BeatItemsList"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             FocusManager.IsFocusScope="True"
             mc:Ignorable="d">
    <Grid>
        <WrapPanel x:Name="PART_ItemsControl"
                   Background="#ECF1F4"
                   FocusVisualStyle="{x:Null}"
                   Focusable="True"
                   InputMethod.IsInputMethodEnabled="False"
                   Orientation="Horizontal" />
        <local:SelectMaskPaint x:Name="PART_SelectMask" />
    </Grid>
</UserControl>
