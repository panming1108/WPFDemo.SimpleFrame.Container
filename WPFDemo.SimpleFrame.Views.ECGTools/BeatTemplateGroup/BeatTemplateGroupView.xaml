<UserControl x:Class="WPFDemo.SimpleFrame.Views.ECGTools.BeatTemplateGroup.BeatTemplateGroupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPFDemo.SimpleFrame.Views.ECGTools.BeatTemplateGroup"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                      InputMethod.IsInputMethodEnabled="False"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="PART_GroupItemsControl"
                        Background="#F0F6FA"
                        FocusVisualStyle="{x:Null}"
                        MouseLeftButtonDown="BeatTemplateGroupView_MouseLeftButtonDown" />
        </ScrollViewer>
        <local:SelectMaskPaint x:Name="PART_GroupSelectMask" />
    </Grid>
</UserControl>
