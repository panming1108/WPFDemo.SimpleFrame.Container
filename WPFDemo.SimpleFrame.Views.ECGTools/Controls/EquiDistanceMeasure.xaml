<UserControl x:Class="WPFDemo.SimpleFrame.Views.ECGTools.Controls.EquiDistanceMeasure"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFDemo.SimpleFrame.Views.ECGTools.Controls"
             mc:Ignorable="d">
    <Grid>
        <Canvas x:Name="EquiDistanceMeasureCanvas" 
                ClipToBounds="True"
                Focusable="True" 
                Background="Transparent"
                MouseMove="EquiDistanceMeasureCanvas_OnMouseMove" 
                MouseLeftButtonDown="EquiDistanceMeasureCanvas_OnMouseLeftButtonDown">
        </Canvas>
    </Grid>
</UserControl>
